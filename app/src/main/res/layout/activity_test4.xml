<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.test.Test4Activity">


    <com.feng.p2planchat.widget.RoundAngleImageView
        android:id="@+id/iv_test4_head_image"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:src="@drawable/head_image3"
        app:radius = "12dp"/>

    <View
        android:id="@+id/v_test4_badge"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"/>

    <TextView
        android:id="@+id/tv_test4_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小王"
        android:textSize="14sp"
        android:layout_toEndOf="@id/iv_test4_head_image"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_item_user_name"/>

    <TextView
        android:id="@+id/tv_test4_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="聊天内容"
        android:textSize="10.5sp"
        android:layout_toEndOf="@id/iv_test4_head_image"
        android:layout_below="@id/tv_test4_name"
        android:layout_marginTop="3dp"
        android:textColor="@color/color_item_user_text"/>

    <TextView
        android:id="@+id/tv_test4_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="早上9:16"
        android:textSize="10.5sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_item_user_time"/>

</RelativeLayout>