<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:minHeight="70dp"
    android:id="@+id/rv_item_user_layout"
    android:background="@drawable/selector_item_user_layout"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_item_user_head_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/head_image0"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小王"
        android:textSize="16sp"
        android:layout_toEndOf="@id/iv_item_user_head_image"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_item_user_name"/>

    <TextView
        android:id="@+id/tv_item_user_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="聊天内容"
        android:textSize="12sp"
        android:layout_toEndOf="@id/iv_item_user_head_image"
        android:layout_below="@id/tv_item_user_name"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_item_user_text"/>

    <TextView
        android:id="@+id/tv_item_user_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="早上9:16"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_item_user_time"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_item_user_line"/>

</RelativeLayout>