<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <com.feng.p2planchat.widget.RoundAngleImageView
        android:id="@+id/iv_item_chat_receive_picture_head_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/head_image1"
        android:scaleType="fitXY"
        app:radius = "4dp"/>

    <com.feng.p2planchat.widget.RoundAngleImageView
        android:id="@+id/iv_item_chat_receive_picture_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/head_image2"
        android:layout_toEndOf="@id/iv_item_chat_receive_picture_head_image"
        android:layout_marginStart="10dp"
        android:maxWidth="150dp"
        app:radius = "5dp"/>

</RelativeLayout>