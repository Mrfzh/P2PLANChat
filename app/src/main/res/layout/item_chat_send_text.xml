<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <com.feng.p2planchat.widget.RoundAngleImageView
        android:id="@+id/iv_item_chat_send_text_head_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:src="@drawable/head_image1"
        android:scaleType="fitXY"
        app:radius = "4dp"/>

    <TextView
        android:id="@+id/tv_item_chat_send_text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:text="我们"
        android:textSize="16sp"
        android:layout_toStartOf="@id/iv_item_chat_send_text_head_image"
        android:layout_marginEnd="5dp"
        android:textColor="@color/color_chat_text"
        android:background="@drawable/chat_send_text"
        android:padding="8dp"/>

</RelativeLayout>