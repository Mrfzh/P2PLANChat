<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lv_personal_info_title_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/color_personal_info_title_bg">

        <ImageView
            android:id="@+id/iv_personal_info_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_back"
            android:src="@drawable/back"
            android:scaleType="center"
            android:focusable="true"
            android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="个人信息"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/color_personal_info_title_text"/>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_personal_info_head_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/head_image2"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/color_personal_info_head_image_border"/>

    <TextView
        android:id="@+id/tv_personal_info_edit_head_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑头像"
        android:textColor="@color/color_personal_info_text_light"
        android:textSize="14sp"
        android:layout_below="@id/iv_personal_info_head_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/v_personal_info_line_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_personal_info_edit_head_image"
        android:layout_marginTop="50dp"
        android:background="@color/color_personal_info_line"/>

    <RelativeLayout
        android:id="@+id/rv_personal_info_name_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/v_personal_info_line_one"
        android:background="@drawable/selector_personal_info_item"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="16sp"
            android:textColor="@color/color_person_item_text"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/enter_person_item"/>

        <TextView
            android:id="@+id/tv_personal_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大黄"
            android:textSize="14sp"
            android:textColor="@color/color_personal_info_text_light"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/v_personal_info_line_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rv_personal_info_name_layout"
        android:background="@color/color_personal_info_line"/>

    <RelativeLayout
        android:id="@+id/rv_personal_info_ip_address_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/v_personal_info_line_two"
        android:background="@drawable/selector_personal_info_item"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP地址"
            android:textSize="16sp"
            android:textColor="@color/color_person_item_text"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp" />

        <TextView
            android:id="@+id/tv_personal_info_ip_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="192.34.68.12"
            android:textSize="14sp"
            android:textColor="@color/color_personal_info_text_light"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/v_personal_info_line_three"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rv_personal_info_ip_address_layout"
        android:background="@color/color_personal_info_line"/>

    <RelativeLayout
        android:id="@+id/rv_personal_info_password_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/v_personal_info_line_three"
        android:background="@drawable/selector_personal_info_item"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="16sp"
            android:textColor="@color/color_person_item_text"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/enter_person_item"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="14sp"
            android:textColor="@color/color_personal_info_text_light"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/v_personal_info_line_four"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rv_personal_info_password_layout"
        android:background="@color/color_personal_info_line"/>

</RelativeLayout>